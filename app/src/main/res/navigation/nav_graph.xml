<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.blank.feature.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.blank.feature.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <deepLink app:uri="app://newsapp/home" />
        <action
            android:id="@+id/action_homeFragment_to_detailArticleFragment"
            app:destination="@id/detailArticleFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailArticleFragment"
        android:name="com.blank.feature.home.DetailArticleFragment"
        android:label="Article Detail"
        tools:layout="@layout/fragment_detail_article">
        <argument
            android:name="newsItem"
            app:argType="com.blank.core.model.NewsItem" />
    </fragment>

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.blank.feature.explore.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_exploreFragment_to_detailArticleFragment"
            app:destination="@id/detailArticleFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="com.blank.feature.bookmark.BookmarksFragment"
        android:label="Bookmarks"
        tools:layout="@layout/fragment_bookmarks">
        <action
            android:id="@+id/action_bookmarksFragment_to_detailArticleFragment"
            app:destination="@id/detailArticleFragment" />
    </fragment>

</navigation>
